<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.myland.framework.authority.dao.UserRoleDao">

    <insert id="insert" parameterType="UserRole">
        INSERT INTO auth_user_role
        (
        `USER_ID`,
        `ROLE_ID`
        )
        VALUES
        (
        #{userId},
        #{roleId}
        )
    </insert>

    <delete id="deleteByPrimaryKey">
        DELETE FROM auth_user_role WHERE USER_ID = #{value}
    </delete>

    <update id="updateByPrimaryKeySelective" parameterType="UserRole">
        UPDATE auth_user_role
        <set>
            <if test="roleId != null">`ROLE_ID` =
                #{roleId}
            </if>
        </set>
        WHERE USER_ID = #{userId}
    </update>

    <select id="selectByPrimaryKey" resultType="UserRole">
        SELECT * FROM auth_user_role WHERE USER_ID = #{value}
    </select>

    <select id="selectList" resultType="UserRole">
        SELECT * FROM auth_user_role
        <where>
        </where>
        ORDER BY USER_ID DESC
    </select>

    <select id="selectAll" resultType="UserRole">
        SELECT * FROM auth_user_role
    </select>

    <!-- 自定义sql -->

</mapper>