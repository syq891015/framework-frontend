<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.myland.framework.authority.dao.RoleMenuDao">

    <insert id="insert" parameterType="RoleMenu">
        INSERT INTO auth_role_menu
        (
        `ROLE_ID`,
        `MENU_ID`
        )
        VALUES
        (
        #{roleId},
        #{menuId}
        )
    </insert>

    <delete id="deleteByPrimaryKey">
        DELETE FROM auth_role_menu WHERE ROLE_ID = #{value}
    </delete>

    <update id="updateByPrimaryKeySelective" parameterType="RoleMenu">
        UPDATE auth_role_menu
        <set>
            <if test="menuId != null">`MENU_ID` =
                #{menuId}
            </if>
        </set>
        WHERE ROLE_ID = #{roleId}
    </update>

    <select id="selectByPrimaryKey" resultType="RoleMenu">
        SELECT * FROM auth_role_menu WHERE ROLE_ID = #{value}
    </select>

    <select id="selectList" resultType="RoleMenu">
        SELECT * FROM auth_role_menu
        <where>
        </where>
        ORDER BY ROLE_ID DESC
    </select>

    <select id="selectAll" resultType="RoleMenu">
        SELECT * FROM auth_role_menu
    </select>

    <!-- 自定义sql -->

</mapper>